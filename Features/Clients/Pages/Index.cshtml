@page
@model WebApplication1.Features.Clients.Pages.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Clients";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Add New Client</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="Client_FirstName" class="form-label">First Name</label>
                            <input asp-for="Client.FirstName" class="form-control" />
                            <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Client_Surname" class="form-label">Surname</label>
                            <input asp-for="Client.Surname" class="form-control" />
                            <span asp-validation-for="Client.Surname" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Client_Patronymic" class="form-label">Patronymic</label>
                            <input asp-for="Client.Patronymic" class="form-control" />
                            <span asp-validation-for="Client.Patronymic" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Client_Email" class="form-label">Email</label>
                            <input asp-for="Client.Email" type="email" class="form-control" />
                            <span asp-validation-for="Client.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Client_BirthDate" class="form-label">Birth Date</label>
                            <input asp-for="Client.BirthDate" type="date" class="form-control" />
                            <span asp-validation-for="Client.BirthDate" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Add Client</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Clients List</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>First Name</th>
                                    <th>Surname</th>
                                    <th>Patronymic</th>
                                    <th>Email</th>
                                    <th>Birth Date</th>
                                    <th>Additional info</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var client in Model.Clients)
                                {
                                    <tr>
                                        <td>@client.FirstName</td>
                                        <td>@client.Surname</td>
                                        <td>@client.Patronymic</td>
                                        <td>@client.Email</td>
                                        <td>@client.BirthDate.ToShortDateString()</td>
                                        <td>
                                            <div class="d-grid gap-2">
                                                <a asp-page="/Features/Clients/Pages/Details" asp-route-id="@client.Id" class="btn btn-sm btn-info">Details</a>
                                                <a asp-page="/Features/Clients/Pages/AddressDetails" asp-route-id="@client.Id" class="btn btn-sm btn-warning">Address</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml"/>
}